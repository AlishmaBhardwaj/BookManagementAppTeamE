@using ConceptArchitect.BookManagement
@model Author
@{
    Layout = "/Views/Shared/_Layout.cshtml";
}



<h2>Delete Author</h2>
<form asp-action="Delete" method="POST">
    <input type="hidden" name="Id" value="@Model.Id" />



    <p>Are you sure you want to delete the author with the following details?</p>
    <p>Name: @Model.Name</p>
    <p>Birth Date: @Model.BirthDate</p>
    <p>Biography: @Model.Biography</p>
    <p>Email: @Model.Email</p>
    <p>Photo: @Model.Photo</p>



    <div>
        <input type="submit" value="Delete Author" class="btn btn-danger form-control" />
    </div>
</form>

